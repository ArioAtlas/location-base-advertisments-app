<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/adv_cover"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="250dp"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_launcher_background"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/adv_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adv Title"
                fontPath="fonts/IRANSans.ttf"
                android:textDirection="rtl"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/adv_cover"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                tools:ignore="MissingPrefix" />

            <TextView
                android:id="@+id/adv_desc_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Description part 1"
                fontPath="fonts/IRANSans.ttf"
                android:textSize="18sp"
                android:textDirection="rtl"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/adv_title"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textColor="@color/primeGray"
                tools:ignore="MissingPrefix" />

            <TextView
                android:id="@+id/adv_desc_2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Description Part 2"
                fontPath="fonts/IRANSans.ttf"
                android:textSize="18sp"
                android:textDirection="rtl"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/adv_desc_1"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                tools:ignore="MissingPrefix" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp">

                <Button
                    android:layout_weight="1"
                    android:id="@+id/adv_get_contact"
                    fontPath="fonts/IRANSans.ttf"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/image_rounded_bg_cyan"
                    android:padding="15dp"
                    android:text="اطلاعات تماس"
                    android:textColor="@color/white"
                    tools:ignore="MissingPrefix" />

                <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1" />

                <Button
                    android:layout_weight="1"
                    android:id="@+id/adv_save"
                    fontPath="fonts/IRANSans.ttf"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:background="@drawable/image_rounded_bg_red"
                    android:padding="15dp"
                    android:text="ذخیره آگهی"
                    android:textColor="@color/white"
                    tools:ignore="MissingPrefix" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>